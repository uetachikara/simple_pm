<p style="color: green"><%= notice %></p>

<%= render @project %>

<div>
  <%= link_to "Edit this project", edit_project_path(@project) %> |
  <%= link_to "Back to projects", projects_path %>

  <%= button_to "Destroy this project", @project, method: :delete %>
</div>

<hr>

<h2>Tasks</h2>

<p>
  絞り込み:
  <%= link_to "全て", project_path(@project) %> |
  <%= link_to "todo", project_path(@project, status: "todo") %> |
  <%= link_to "doing", project_path(@project, status: "doing") %> |
  <%= link_to "done", project_path(@project, status: "done") %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Due date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.status %></td>
        <td><%= task.due_date %></td>
        <td><%= link_to "Show", task %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to "New task", new_task_path(project_id: @project.id) %>
</p>
